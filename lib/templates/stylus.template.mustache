{
  // Default options
  'functions': true
}

{{#items}}
${{name}}_x = {{px.x}};
${{name}}_y = {{px.y}};
${{name}}_offset_x = {{px.offset_x}};
${{name}}_offset_y = {{px.offset_y}};
${{name}}_width = {{px.width}};
${{name}}_height = {{px.height}};
${{name}}_image = '{{{image}}}';
${{name}} = {{px.x}} {{px.y}} {{px.offset_x}} {{px.offset_y}} {{px.width}} {{px.height}} '{{{image}}}';
{{/items}}

{{#options.functions}}
spriteX($sprite) {
  return $sprite[0];
}

spriteY($sprite) {
  return $sprite[1];
}

spriteOffsetX($sprite) {
  return $sprite[2];
}

spriteOffsetY($sprite) {
  return $sprite[3];
}

spriteWidth($sprite) {
  return $sprite[4];
}

spriteHeight($sprite) {
  return $sprite[5];
}

spriteImage($sprite) {
  return $sprite[6];
}

sprite($sprite) {
  background-image: url(spriteImage($sprite));
  background-position: spriteOffsetX($sprite) spriteOffsetY($sprite);
  width: spriteWidth($sprite);
  height: spriteHeight($sprite);
}
{{/options.functions}}
